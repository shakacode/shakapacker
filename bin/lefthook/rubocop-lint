#!/usr/bin/env bash
# Lint staged Ruby files with RuboCop

set -e

if [ -z "$1" ]; then
  echo "No files to check"
  exit 0
fi

echo "Running RuboCop on staged files..."

# Run RuboCop with auto-correct on staged files
bundle exec rubocop --autocorrect-all $@
exit_code=$?

if [ $exit_code -ne 0 ]; then
  echo ""
  echo "RuboCop found issues that could not be auto-corrected."
  echo "Please fix the remaining issues manually."
  exit 1
fi

echo "âœ“ RuboCop passed"

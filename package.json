    "lint-staged": "^15.2.10",
    "memory-fs": "^0.5.0",
    "mini-css-extract-plugin": "^2.9.4",
    "prettier": "^3.6.2",
    "rspack-manifest-plugin": "^5.0.3",
    "sass-loader": "^16.0.5",
    "swc-loader": "^0.1.15",
    "thenify": "^3.3.1",
    "ts-jest": "^29.4.5",
